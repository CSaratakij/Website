doctype html
html(lang="en")
  meta(charset="utf-8")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  head
    title GameLobby
    link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/pure-min.css" integrity="sha384-oAOxQR6DkCoMliIh8yFnu25d7Eq/PHS21PClpwjOTeU2jRSq11vu66rf90/cZr47" crossorigin="anonymous")
    link(rel="stylesheet" type="text/css" href="css/lobbytheme.css")
    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@9")
    script(src="js/vue.min.js")
    script(src="js/lobbyclient.js")
  body
    div(id="app")
      section(class="wrapper")
        div(class="text-center")
          header(class="header") {{ title }}
          article(class="container")
            div(v-if="total > 0")
              table(class="pure-table")
                thead
                  tr
                    th  #
                    th  Name
                    th  Address
                    th  Port
                    th  Player
                tbody(v-for="(item, index) in lobby" :key="index")
                  tr
                    td  {{ index + 1 }}
                    td  {{ item.title }}
                    td  {{ item.ip }}
                    td  {{ item.port }}
                    td  {{ item.player }} / {{ item.maxPlayer }}
            div(v-if="total <= 0" class="container")
              div
                h4  No game available...
      footer(class="footer")
        div(class="pure-g")
          div(class="pure-u-1-2")
            p(class="text-left")  live at : {{ localeDate() }}
          div(class="pure-u-1-2")
            p(class="text-right") available : {{ total }}